{
    "name": "contao/image",
    "type": "library",
    "description": "Contao image library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Martin Ausw√∂ger",
            "homepage": "https://github.com/ausi"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-json": "*",
        "imagine/imagine": "^0.7.1 || ^1.0",
        "symfony/filesystem": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "symfony/polyfill-php73": "^1.11",
        "webmozart/path-util": "^2.0"
    },
    "conflict": {
        "contao/imagine-svg": "<0.1.4 || >=2.0"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^1.0",
        "contao/imagine-svg": "^0.1.4 || ^0.2 || ^1.0",
        "phpstan/phpstan-phpunit": "^0.12",
        "psalm/plugin-phpunit": "^0.9",
        "psalm/plugin-symfony": "^1.0",
        "slam/phpstan-extensions": "^5.0",
        "symfony/console": "^4.3 || ^5.0",
        "symfony/phpunit-bridge": "^5.1.5",
        "vimeo/psalm": "^3.9"
    },
    "suggest": {
        "ext-exif": "To support EXIF auto-rotation"
    },
    "autoload": {
        "psr-4": {
            "Contao\\Image\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\Image\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@cs-fixer",
            "@phpstan",
            "@psalm"
        ],
        "cs-fixer": [
            "vendor/bin/ecs check src tests --config vendor/contao/easy-coding-standard/config/default.php --fix --ansi"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyze src tests --level=4 --memory-limit=1G --ansi"
        ],
        "psalm": [
            "vendor/bin/psalm --no-suggestions --threads=4"
        ],
        "unit-tests": [
            "vendor/bin/simple-phpunit --colors=always"
        ]
    }
}
